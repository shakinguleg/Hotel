.pointsExchangeItem {
  display: flex;
  flex-direction: row;
  color: white;
  background-color: white;
  overflow: hidden;
}

/* 左边 */
.pointsExchangeItem .left {
  width: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background-color: #F42829;
  z-index: 2;
  border-bottom: 1px solid #999;
}

.left .dot__left_top {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  top: -5px;
  left: -5px;
}

.left .dot__left_bottom {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  bottom: -5px;
  left: -5px;
  border: 1px solid #999;
}

.pointsExchangeItem .left::before {
  content: "";
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  top: -5px;
  right: -5px;
}

.pointsExchangeItem .left::after {
  content: "";
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  bottom: -5px;
  right: -5px;
  border: 1px solid #999;
}

.left .left_text {
  padding: 10rpx;
  box-sizing: border-box;
  width: 40rpx;
  color: white;
  font-size: 20rpx;
}


/* 中间 */
.pointsExchangeItem .center {
  display: flex;
  position: relative;
  flex-direction: column;
  flex: 1;
  font-size: 25rpx;
  padding: 20rpx 0 20rpx 20rpx;
  border-bottom: 1px solid #999;
  justify-content: center;
  color: #333;
}

.center .left_title {
  font-size: 40rpx;
}

.center .text_wrap {
  margin-top: 15rpx;
}

.center .bottom {
  color: #999;
}

.pointsExchangeItem .center::before {
  content: "";
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  top: 0;
  right: 0;
  transform: translate(50%, -50%);
  z-index: 2;
}

.pointsExchangeItem .center::after {
  content: "";
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  bottom: 0;
  right: 0;
  transform: translate(50%, 50%);
  border: 1px solid #999;
  z-index: 2;
}

/* 右边 */
.pointsExchangeItem .right {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #333;
  position: relative;
  border-bottom: 1px solid #999;
  border-right: 1px solid #ccc;
}

.pointsExchangeItem .btn_exchange {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #F42829;
  color: white;
}

.pointsExchangeItem .right::before {
  content: "";
  position: absolute;
  width: 1px;
  height: 60%;
  top: 50%;
  left: 0;
  transform: translate(0, -50%);
  background-color: rgba(71, 62, 62, 0.2)
}