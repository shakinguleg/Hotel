.order_wrap{
  width: 730rpx;
  height: 200px;
  box-shadow: 0px 0px 5px rgba(102, 102, 102, 0.349019607843137);
  border-radius: 5px;
}
.header{
  width: 100%;
  height: 35px;
  box-sizing: border-box;
  padding: 0 10px;
  border-bottom: 0.5px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #333;
}
.order_content{
  width: 100%;
  height: 80px;
  border-bottom: 0.5px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left{
  width: 98px;
  height: 59px;
}
.image{
  width: 98px;
  height: 59px;
}
.right{
  width: 260px;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.right .title{
  font-size: 14px;
  color: #333;
}
.right .price{
  font-size: 14px;
  color: #333;
}
.right .count{
  position: absolute;
  font-size: 14px;
  color: #333;
  right: 15px;
  top: 30px;
}
.total_price{
  width: 100%;
  height: 34px;
  display: flex;
  justify-content: space-between;
  border-bottom: 0.5px solid #eee;
  align-items: center;
  box-sizing: border-box;
  padding: 0 10px;
}
.total_price .date{
  font-size: 14px;
  color: #a1a1a1;
}
.total_price .wenzi{
  font-size: 14px;
  color: #333;
  margin-left: 120px;
}
.total_price .total{
  font-size: 17px;
  color: red;
}
.last{
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;
  padding: 0 10px;
}
.btn{
  width: 58px;
  height: 26px;
  font-size: 12px;
  color: white;
  border-radius: 2px;
  margin: 0 3px;
  line-height: 26px;
  text-align: center;
}
.pingjia{
  background-color: rgba(153, 204, 51, 1);
}
.yuding{
  background-color: rgba(74, 189, 204, 1);
}
.zhifu{
  background-color: rgba(204, 153, 0, 1);
}