/* components/rechargeItem/rechargeItem.wxss */
.rechargeItem {
  display: flex;
  flex-direction: row;
  border-radius: 10px;
  overflow: hidden;
  font-size: 5px;
  color: white;
  -moz-box-shadow: 1px 1px 10px #333333;
  -webkit-box-shadow: 1px 1px 10px #333333;
  box-shadow: 1px 1px 10px #333333;
}

.rechargeItem .left {
  display: flex;
  position: relative;
  flex-direction: column;
  width: 80%;
  font-size: 10px;
  padding-top: 28px;
  padding-left: 20px;
  padding-bottom: 20px;
}

.rechargeItem .left::before {
  content: "";
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  top: -5px;
  right: -5px
}

.rechargeItem .left::after {
  content: "";
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: white;
  position: absolute;
  bottom: -5px;
  right: -5px
}

/* 会员标志 */
.rechargeItem .left .left_float {
  position: absolute;
  top: 0;
  left: 0;
  padding: 6px 15px 6px 6px;
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 0 0 16px 0/0 0 16px 0;
  font-size: 10px;
  font-weight: bold;
  font-style: italic;
}

.rechargeItem .money {
  font-size: 12px;
}

.rechargeItem .right {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #D8E724;
  position: relative;
}

.rechargeItem .right::before {
  content: "";
  position: absolute;
  width: 1px;
  height: 60%;
  top: 50%;
  left: 0;
  transform: translate(0, -50%);
  background-color: rgba(71, 62, 62, 0.2)
}