.recommend{
  width: 725rpx;
  height: 98px;
  box-shadow: 0px 0px 5px rgba(134, 134, 134, 0.349019607843137);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 0;
  background-color: #fff;
  border-radius: 5px;
  margin: 5px auto;
}
.left{
  width: 137px;
  height: 88px;
  box-sizing: border-box;
  padding: 0 5px;
}
.img{
  width: 137px;
  height: 88px;
}
.right{
  width: 226px;
  height: 98px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding: 8px 10px;
  position: relative;
}
.title{
  font-size: 13px;
  color: #333;
}
.label_wrap{
  width: 100%;
  height: max-content;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.label_item{
  font-size: 12px;
  color: #797979;
  margin: 0 3px;
  padding: 0 2px;
  box-shadow: 0px 0px 5px rgba(134, 134, 134, 0.349019607843137);
}
.price{
  font-size: 12px;
  color: #333;
}
.score{
  font-size: 12px;
  color: #333;
}
.reserve{
  width: 44px;
  height: 26px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  line-height: 26px;
  background-color: rgba(74, 189, 204, 1);
  position: absolute;
  right: 10px;
  bottom: 10px;
}