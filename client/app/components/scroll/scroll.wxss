/* components/scroll/scroll.wxss */
.scroll_view {
  width: 750rpx;
  display: flex;
  background-color: white;
}

.scroll_item_wrap {
  background-color: white;
  position: relative;
  height: max-content;
}

.text_wrap {
  padding: 2px 10px;
  box-sizing: border-box;
  font-size: 10px;
  color: white;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  background-color: rgba(241, 232, 232, 0.6)
}

.scroll_title {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.scroll_price {
  width: 40%;
}

.scroll_img {
  /* width: 50rpx; */
  width: 230rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 10rpx;
}