.couponItem {
  width: 100%;
  height: 78px;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  font-size: 10px;
  position: relative;
  margin-bottom: 10px;
  overflow: hidden
}

.couponItem .left {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: white;
  padding: 15px;
  position: relative;
  box-sizing: border-box;
}

.couponItem .left::after {
  content: "";
  width: 4px;
  height: 100%;
  position: absolute;
  border-right: 4px dotted white;
  top: 0;
  right: 0;
  transform: translate(25%, 0);
  z-index: 2;
}

.couponItem .stamp {
  position: absolute;
  z-index: 3;
  top: 50%;
  left: 60%;
  transform: translate(-50%, -50%);
  overflow: hidden;
}

.couponItem .text_wrap {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.text_wrap .left_price {
  font-size: 20px;
  margin-left: 4px;
  line-height: 24px;
}

.text_wrap .left_con {
  margin-left: 10px;
}

.couponItem .right {
  flex: 1;
  box-sizing: border-box;
  background-color: white;
  display: flex;
  flex-direction: column;
  color: #C1C1C1;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}