.couponItem {
  width: 100%;
  height: 78px;
  background-color: red;
  border-radius: 4px;
  display: flex;
  flex-direction: row;
  font-size: 10px;
}

.couponItem .left {
  width: 60%;
  display: flex;
  flex-direction: column;
  color: white;
  padding: 15px;
}

.couponItem .text_wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.text_wrap .left_price {
  font-size: 20px;
  margin-left: 4px;
}

.text_wrap .left_con {
  margin-left: 10px;
}

.couponItem .left .img {
  height: 100px;
  width: 10px;
}

.couponItem .right {
  width: 40%;
  background-color: white;
  display: flex;
  flex-direction: column;
  color: #C1C1C1;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}