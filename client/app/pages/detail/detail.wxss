page{
  background-color: #F4F4F4;
}
.img{
  width: 100%;
height: 380rpx;
}

.img-wrap{
  padding: 10rpx;

}
.swiper{
  height: 400rpx;
  background-color: #fff;
}
.tit{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 40rpx 60rpx;
}
.header{
  font-size: 38rpx;
  color: #333;
}
.tag{
  display: flex;
  margin:  10rpx 0;
}
.tag-item{
    padding: 5rpx 10rpx;
    border: 1rpx #ccc solid;
    margin-right: 20rpx;
    color: #666;
   font-size: 30rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;
  color: #333;
  align-items: center;
}
.bottom-btn{
  padding: 10rpx 20rpx;
  background-color: #4ABDCC;
  color: #fff;
  border-radius: 10rpx;
}
.info{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 40rpx 60rpx;
}
.info-tit{
  font-size: 38rpx;
  color: #333;
}
.info-con{
  display: flex;
  flex-wrap: wrap;
}
.info-item{
  display: flex;
  width: 50%;
  
}
.item-tag{
  flex: 1;
  font-size: 28rpx;
  color: #666;
  height: 80rpx;
  line-height: 80rpx;
}
.server{
  box-sizing: border-box;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 40rpx 60rpx;
  width: 100%;
}
.server-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.server-info{
  box-sizing: border-box;
 
  display: flex;
  flex-wrap: wrap;
}
.server-item{
  font-size: 28rpx;
  color: #666;
  height: 80rpx;
  line-height: 80rpx;
  width: 33.33%;
  display: flex;
  align-items: center;
}
.rate{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 40rpx 60rpx;
}
.rate-tit{
  font-size: 38rpx;
  color: #333;
}
.rate-info{
  display: flex;
  height: 160rpx;
  margin-top: 20rpx;
}
.rate-left{
  display: flex;
  height: 160rpx;
  flex-direction: column;
  justify-content: space-between;
}
.rate-right{
  height: 160rpx;
  display: flex;
  flex: 1;
}
.num{
  font-size: 60rpx;
}
.rate-right-l{
  width: 200rpx;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.rate-right-r{
  margin-left: 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.star{
  text-align: right;
  height: 16rpx;
  display: flex;
  justify-content: flex-end;
}
.star image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.line{
  width: 100%;
  height: 4rpx;
  background-color: red;
}

.comment{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 40rpx 60rpx;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.comment-item{
  padding: 20rpx 0;
  display: flex;
border-bottom: 1rpx #ccc solid;
}
.commont-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.nickName{
  font-size: 32rpx;
  color: #333;
}
.commont-con{
  font-size: 28rpx;
  color: #666;
}
.comment-right{
  margin-left: 20rpx;
}
