.reserve{
  width: 100%;
  background-color: #f0f4f9;
}
.banner{
  width: 100%;
  height: 199px;
}
.swiper{
  width: 100%;
  height: 100%;
}
.swiper_item image{
  width: 100%;
  height: 199px;
}
.hotel_info{
  width: 100%;
  height: 115px;
  box-sizing: border-box;
  padding: 10px 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  position: relative;
  margin-bottom: 10px;
}
.hotel_name{
  font-size: 17px;
  font-weight: bold;
  color: #333;
}
.share{
  width: 33px;
  height: 31px;
  box-sizing: border-box;
  padding: 3px;
  position: absolute;
  right: 20px;
  top: 25px;
}
.share image{
  width: 26px;
  height: 26px;
}
.label_wrap{
  width: 100%;
  height: max-content;
  display: flex;
  justify-content: center;
  align-items: center;
}
.label_item{
  font-size: 12px;
  color: #797979;
  margin: 0 5px;
  padding: 0 2px;
  border: 1px solid rgba(215, 215, 215, 1);
}
.contact{
  width: 100%;
  height: max-content;
  display: flex;
  justify-content: center;
  align-items: center;
}
.contact view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.contact view image{
    width: 18px;
    height: 18px;
}
.contact text{
  font-size: 13px;
  color: rgb(76,184,190);
  margin: 0 5px;
}
/* tab头部 */
.tab_header{
  width: 375rpx;
  height: 39px;
  font-size: 13px;
  color: #333;
  text-align: center;
  line-height: 39px;
  margin-bottom: 8px;
}
.tabs_content{
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  background-color: #fefefe;
  padding: 0 5px;
  height: 600px;
}
.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
  font-size: 14px;
  line-height: 40px;
  text-align: center;
  border-top: 0.5px solid #eee;
  color: #999;
}