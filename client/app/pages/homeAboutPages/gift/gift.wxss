/* app/pages/gift/gift.wxss */
.gift {
  background-color: #eee;
  width: 100%;
  height: 100%;
  font-size: 10px;
}

.gift_top {
  width: 100%;
  height: 200px;
  background-color: #7F00FF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.center_wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}

.gift_top_money {
  margin-bottom: 10px;
  font-size: 30px;
}

.gift_top_info {
  margin-bottom: 10px;
  font-size: 8px;
}

.gift_top_text {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 60%;
}

.gift_top_text text {
  padding: 4px 10px;
  border: 1px solid white;
  border-radius: 15px;
}

/* 充值专享 */
.recharge {
  padding: 4px 20px;
  box-sizing: border-box;
  width: 100%;
  height: 30px;
  background-color: white;
  font-size: 12px;
  display: flex;
  align-items: center;
}

.recharge_wrap {
  width: 100%;
  margin-bottom: 49px;
  margin-top: 10px;
  padding: 10px 0;
  background-color: white;
}

.recharge_item_wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 10px 20px;
  border-top: 1px solid #ccc;
  background-color: white;
}

.recharge_wrap .recharge_item_wrap:nth-child(1) {
  border-top: none
}