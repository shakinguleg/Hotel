/* app/pages/pointsMall/pointsMall.wxss */
.pointsMall {
  background-color: #eee;
  width: 100%;
  height: 100%;
  font-size: 24rpx;
}

.pointsMall_top {
  width: 100%;
  height: 200px;
  background-color: #F92D30;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.center_wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.pointsMall_top_money {
  margin-bottom: 20rpx;
  font-size: 60rpx;
}

.pointsMall_top_info {
  margin-bottom: 20rpx;
  font-size: 20rpx;
}

.pointsMall_top_text {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 60%;
}

.pointsMall_top_text text {
  padding: 8rpx 20rpx;
  border: 1px solid white;
  border-radius: 30rpx;
}

/* 充值专享 */
.pointsExchange {
  padding: 8rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  background-color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.pointsExchange_wrap {
  width: 100%;
  margin-bottom: 49px;
  margin-top: 20rpx;
  padding: 20rpx 0;
  background-color: white;
}

.pointsExchange_item_wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  background-color: white;
}