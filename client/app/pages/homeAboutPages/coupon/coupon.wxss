/* app/pages/homeAboutPages/coupon/coupon.wxss */
.coupon {
  width: 100%;
  height: 100%;
}

/* tabs每一项样式 */
.weui-tabs-bar__item {
  width: 25%;
  height: 38px;
  line-height: 36px;
  padding: 0 4px;
  box-sizing: border-box;
}

.weui-tabs-bar__title {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: white;
  text-align: center;
}

.weui-tabs-bar__title text {
  font-size: 13px;
}

.tabClass {
  width: 100%;
}

/* tabs组件中swiper样式 */
.swiper_class {
  height: calc(100vh - 87px) !important;

}

/* 内部嵌套的scroll-view的样式 */
.tab-content {
  height: 100%;
  width: 100%;
  padding: 15px;
  box-sizing: border-box;
  background-color: #eee;
}

.couponItem_wrap {
  padding-bottom: 10px;
}